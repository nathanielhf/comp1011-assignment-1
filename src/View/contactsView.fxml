<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ContactsController">
   <children>
      <HBox VBox.vgrow="NEVER">
         <children>
            <VBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="TOP" prefHeight="70.0" prefWidth="215.0" text="Contacts">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="227.0" prefWidth="560.0">
                     <children>
                        <TableView fx:id="tableView" onMouseClicked="#contactSelected" prefHeight="200.0" prefWidth="560.0">
                          <columns>
                            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="firstNameColumn" prefWidth="138.0" text="First Name" />
                              <TableColumn fx:id="lastNameColumn" prefWidth="148.0" text="Last Name" />
                              <TableColumn fx:id="addressColumn" minWidth="7.0" prefWidth="118.0" text="Address" />
                              <TableColumn fx:id="phoneColumn" prefWidth="105.0" text="Phone" />
                          </columns>
                        </TableView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="15.0" prefWidth="560.0" spacing="20.0">
                     <children>
                        <TextField fx:id="searchBar" prefHeight="25.0" prefWidth="180.0" promptText="Search" />
                        <Button fx:id="searchButton" mnemonicParsing="false" text="Search" />
                        <Button fx:id="editContactButton" mnemonicParsing="false" text="Edit Contact" />
                        <Button fx:id="createNewContact" mnemonicParsing="false" onAction="#createNewContactButtonPushed" text="Create new contact" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
